
<div class="admin-prod">
    <div class="sidebar">
        <center><img  src="/logo1.png"></center>
        <br>    
        <center><a href="/admin/homeget" >Overview</a><br>
        <a href="/admin/products">Products</a><br>
        <!-- <a href="/admin/images" >Images</a><br>-->
        <a href="/admin/orders" >Orders</a><br>
        <br><br>
        <a href="/admin" >Logout</a><br></center>
    </div>
    <div class="content">
    
          <br><br>
          <h2>Shirts</h2>
          
          <table>
            <tr>
                <th>ID</th>
              <th>Shirt Name</th>
              <th>XS</th>
              <th>S</th>
              <th>M</th>
              <th>L</th>
              <th>XL</th>
              <th>2XL</th>
              <th></th>
            </tr>


            <% for(i=0;i < products.length; i++) {
             var link= "/admin/deleteProduct/" + products[i].id; %>
            <tr >
              <th><a href="#" id="<%= products[i].id%>" onclick="selectProd(this)"><%= products[i].id%></a></th>
              <td><%= products[i].productName %></td>
              <td><%= products[i].xs %></td>
              <td><%= products[i].s %></td>
              <td><%= products[i].m %></td>
              <td><%= products[i].l %></td>
              <td><%= products[i].xl %></td>
              <td><%= products[i].xl_2 %></td>
              <td><a href="<%= link%>">Delete</a></td>
            </tr>
            <% } %>
           
          </table>
          <br>
          <br>
          <form action="/addProduct" method="POST"> 
            <div class="form-group">
                <label>Product Name</label>
                <input class="form-control" name="productName" id="productName">
            </div>
            <h5>Sizes</h5>
            <div class="form-sizes">
                <label>XS</label>
                <input class="form-control" name="xs" id="xs">
            </div>
            <div class="form-sizes">
                <label>S</label>
                <input class="form-control" name="s" id="s">
            </div>
            <div class="form-sizes">
                <label>M</label>
                <input class="form-control" name="m" id="m">
            </div>
            <div class="form-sizes">
                <label>L</label>
                <input class="form-control" name="l" id="l">
            </div>
            <div class="form-sizes">
                <label>XL</label>
                <input class="form-control" name="xl" id="xl">
            </div>
            <div class="form-sizes">
                <label>2XL</label>
                <input class="form-control" name="xl_2" id="xl_2">
            </div>
            <input type="hidden" name="prodid" value="-1" id="prodid">
            <br><br><br><br>    
            <button type="submit">Add Product</button>
          </form>
          <br>
          
    </div>
 
</div>

<script>
  function selectProd(elem){
    var id = elem.id;
    var firstchild = elem.parentNode.parentNode.firstElementChild;
    var prodname = document.getElementById('productName');
    var xs = document.getElementById('xs');
    var s = document.getElementById('s');
    var m = document.getElementById('m');
    var l = document.getElementById('l');
    var xl = document.getElementById('xl');
    var xl_2 = document.getElementById('xl_2');
    var inputid = document.getElementById('prodid');
    inputid.value = id;
    prodname.value = firstchild.nextElementSibling.innerHTML;
    xs.value = firstchild.nextElementSibling.nextElementSibling.innerHTML;
    s.value = firstchild.nextElementSibling.nextElementSibling.nextElementSibling.innerHTML;
    m.value = firstchild.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.innerHTML;
    l.value = firstchild.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.innerHTML;
    xl.value = firstchild.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.innerHTML;
    xl_2.value = firstchild.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling.innerHTML;
  }
</script>
